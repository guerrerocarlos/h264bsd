{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build posix",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/posix"
      },
      "command": "rake",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}

